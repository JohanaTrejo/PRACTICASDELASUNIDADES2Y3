<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOMBRE:" />

    <EditText
        android:id="@+id/edtTxtNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALARIO:" />

    <EditText
        android:id="@+id/edtTxtSal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESTADO CIVIL:" />

    <RadioGroup
        android:id="@+id/rdGrpEdoCivil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdbtnSol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOLTERO" />

        <RadioButton
            android:id="@+id/rdbtnCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CASADO" />

        <RadioButton
            android:id="@+id/rdbtnDivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIVORCIADO" />

        <RadioButton
            android:id="@+id/rdbtnSInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIN INFORMACION" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/chkboxInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INFORMACION ADICIONAL" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ENVIAR" />

</LinearLayout>